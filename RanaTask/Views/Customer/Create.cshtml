@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label for="Name">Musteri Adı</label>
        <input class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <textarea class="form-control" id="Email" name="Email" rows="4" required></textarea>
    </div>
    <div class="form-group">
        <label for="Phone">Telefon</label>
        <input class="form-control" id="Phone" name="Phone" required />
    </div>
    <button type="submit" class="btn btn-primary mr-2">Ekle</button>
    <a href="/Customer/Index" class="btn btn-dark">İptal</a>
</form>

